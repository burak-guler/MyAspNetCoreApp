@model List<Product>
@{
    ViewData["Title"] = "Index";
}

@if (TempData["status"]!=null)
{
    <div class="alert alert-success" role="alert">
        @TempData["status"]
    </div>
}

<h1>Ürünler</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Renk</th>
            <th>Genişlik</th>
            <th>Yükseklik</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Color</td>
                <td>@item.Width</td>
                <td>@item.Height</td>
                <td><a class="btn btn-danger" asp-controller="Products" asp-action="Remove" asp-route-id="@item.Id">Sil</a></td>
                <td><a class="btn btn-warning" asp-controller="Products" asp-action="update" asp-route-id="@item.Id">Güncelle</a></td>
            </tr>
        }        
    </tbody>
</table>
